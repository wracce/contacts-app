/* COLORS */
COLOR_PRIMARY = #00A5EE
COLOR_PRIMARY_GRADIENT = linear-gradient(127.12deg, #00EAF9 -13.37%, #00BDF9 96.31%)
COLOR_SECONDARY = #F2F2F7
COLOR_INFO = #AEAEB2
COLOR_INFO_LIGHTER = #E5E5EA
COLOR_DANGER = #FF0000
COLOR_BACKGROUND = #F7FCFE
COLOR_BACKGROUND_LIGHTER = #FFFFFF
COLOR_ON_SECONDARY = #8E8E93
COLOR_ON_BACKGROUND_LIGHTER = #505050
COLOR_ON_LIGHT = #000000
COLOR_ON_DARK = #FFFFFF

SPACE_S = 0.5em /* 8px */
SPACE_M = 1em /* 16px */

ui_text-weight(weight)
  w = 400
  if weight is normal
    w = 400
  if weight is bold
    w = 500
  font-weight w

ui_text-size(size)
  fs = 0px
  ls = 0px
  if size is s
    /* 12px */
    fs = 0.75rem
    /* 12px */
    ls = 0.75rem
  if size is m
    /* 12px */
    fs = 0.75rem
    /* 16px */
    ls = 1rem
  if size is l
    /* 16px */
    fs = 1rem
    /* 24px */
    ls = 1.5rem
  if size is xl
    /* 20px */
    fs = 1.25rem
    /* 24px */
    ls = 1.5rem
  if size is xxl
    /* 28px */
    fs = 1.75rem
    /* 32px */
    ls = 2rem
  if size is xxxl
    /* 32px */
    fs = 2rem
    /* 32px */
    ls = 2rem
  font-size fs
  line-height ls

ui_rounded(size)
  val = 0px
  if size is s
    val = 8px
  if size is m
    val = 10px
  if size is l
    val = 16px
  if size is xl
    val = 24px
  border-radius val

ui_scrollbar()
  &::-webkit-scrollbar
    width 5px
    height 5px

  &::-webkit-scrollbar-thumb
    box-shadow 1px 2px 17px 0px #0000000D
    background COLOR_PRIMARY_GRADIENT
    border-radius 8px

  &::-webkit-scrollbar-corner
    background: transparent
