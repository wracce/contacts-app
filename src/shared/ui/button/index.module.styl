@import "../../base-style.styl"
.root
    @extend .block--rounded_s
    @extend .text--weight_bold
    border-width: 0

    &--variant_primary
        background-image: COLOR_PRIMARY_GRADIENT
        color: COLOR_ON_DARK

    &--variant_secondary
        background-color: COLOR_PRIMARY_SECONDARY
        color: COLOR_ON_LIGHT

    &--size_m
        @extend .text--size_m
        padding: 11px 20px


    &--size_l
        @extend .text--size_l
        padding: 3px 11px
