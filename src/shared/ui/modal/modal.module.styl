@import "../../base-style.styl"

.modal__container
	width 100vw
	height: 100vh
	background-color #00000052

	>.modal__content
		position: absolute;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
		width: fit-content
		height: fit-content
		padding: 24px
		background COLOR_BACKGROUND_LIGHTER
		border: 1px solid COLOR_SECONDARY
		box-shadow: 0px 20px 66px 0px #0000003D;
		ui_rounded(l)
		
		>.modal__header
			ui_text-size(xl)
			ui_text-weight(bold)
			margin-bottom 24px
		>.modal__close
			width: 24px
			height: 24px
			background: none
			border: none
			position absolute
			top 10px
			right 24px
			padding: 0

			&:hover
				background: COLOR_SECONDARY
			&:active
				box-shadow: 0px 1px 1px 0px rgba(0, 0, 0, 0.175);
				background: COLOR_INFO_LIGHTER
