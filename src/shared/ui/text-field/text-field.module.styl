@import '../../base-style.styl'

LINE_HEIGHT = 22px
SMALL_FONT = 13px
TOP_SPACE = 4px
BOTTOM_SPACE = 10px
SMALL_BORDER = 1px
BIG_BORDER = 2px



.input__wrapper
  height 50px
  margin 8px

.input__content
  position relative
  top SMALL_FONT + TOP_SPACE

  .input__span
    ui_text-size(l)
    position absolute
    top 0
    left 0
    color COLOR_INFO
    pointer-events none
    transform-origin 0 0
    transform translate3d(0, 0, 0)
    transition all 0.2s ease

  .input__textfield
    ui_text-size(l)
    padding-bottom BOTTOM_SPACE
    width 100%
    max-width 100%
    box-sizing border-box
    border 0
    appearance none
    background COLOR_BACKGROUND_LIGHTER
    color COLOR_ON_LIGHT
    box-shadow inset 0 -1 * SMALL_BORDER 0 COLOR_INFO
    transition all 0.15s ease

    &:not(:placeholder-shown)
    &:autofill
      & + .input__span
        ui_rounded(s)
        color COLOR_INFO
        font-size SMALL_FONT
        line-height SMALL_FONT
        transform translate3d(0, -1 * SMALL_FONT - TOP_SPACE, 0)

    &:focus
      outline none
      box-shadow inset 0 -1 * BIG_BORDER 0 COLOR_PRIMARY

      &:invalid
        box-shadow inset 0 -1 * BIG_BORDER 0 COLOR_DANGER

      & + .input__span
        ui_rounded(s)
        font-size SMALL_FONT
        line-height SMALL_FONT
        color COLOR_PRIMARY
        transform translate3d(0, -1 * SMALL_FONT - TOP_SPACE - SMALL_BORDER, 0)

    &:invalid
      box-shadow inset 0 -1 * SMALL_BORDER 0 COLOR_DANGER
