@import "../../base-style.styl"


// * 
// 	box-sizing border-box
	
.wrapper
	width 100%
	height fit-content
	padding: SPACE_S
	display grid
	font-family Roboto
	-webkit-text-size-adjust 100%
	-webkit-font-smoothing antialiased
	box-sizing border-box


.inp 
	position relative
	margin auto
	width 100%
	max-width 100%
	// overflow hidden
	.label 
		position absolute
		ui_text-size(l)
		// ui_text-weight(bold)
		top 16px
		left 0
		color COLOR_INFO
		transform-origin 0 0
		transform translate3d(0, 0, 0)
		transition all .2s ease
		pointer-events none
	input 
		ui_text-size(l)
		-webkit-appearance none
		appearance none
		width 100%
		border 0
		font-family inherit
		padding (12+4)px 0px 11px 0px
		// height 56px

		background COLOR_BACKGROUND_LIGHTER
		box-shadow inset 0 -1px 0 COLOR_INFO
		color COLOR_ON_LIGHT
		transition all .15s ease
		&:hover 
			// background COLOR_SECONDARY
			// box-shadow inset 0 -1px 0 COLOR_INFO
		&:not(:placeholder-shown) 
			& + .label 
				color COLOR_INFO
				ui_rounded(s)
				transform translate3d(0, -16px, 0) //scale(0.75)
		&:focus 
			// background COLOR_SECONDARY
			// ui_text-weight(bold)  
			outline none
			box-shadow inset 0 -2px 0 COLOR_PRIMARY
			& + .label 
				color COLOR_PRIMARY
				ui_rounded(s)
				transform translate3d(0, -18px, 0) // scale(0.75)
